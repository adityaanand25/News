# Copy this file to .env and replace the placeholder values

# Google Gemini AI API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Set to 'true' to enable Gemini by default
VITE_ENABLE_GEMINI_BY_DEFAULT=false

# Optional: Configure default Gemini settings
VITE_GEMINI_DEFAULT_MODEL=gemini-pro
VITE_GEMINI_DEFAULT_TONE=neutral
VITE_GEMINI_DEFAULT_LENGTH=medium

# Development Settings
VITE_DEV_MODE=true
VITE_DEBUG_GEMINI=false
